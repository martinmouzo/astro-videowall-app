---
import BaseLayout from '../layouts/BaseLayout.astro';
import Panel1 from '../components/Panel1.astro';
import Panel2 from '../components/Panel2.astro';
import Panel3 from '../components/Panel3.astro';
import Panel4 from '../components/Panel4.astro';
---
<BaseLayout title="Videowall">
    <style>
        .panoramic-display-container {
            display: flex;
            flex-direction: row;
            width: 100%;
            min-width: max-content;
            height: 100%;
            background-color: #1E1E1E;
            gap: 3px; /* Further reduced from 6px to 3px for tighter spacing */
        }
        .panel-wrapper {
            height: 100%;
            overflow: hidden;
            position: relative;
            box-sizing: border-box;
            background-color: #1E1E1E;
        }
        .panel-wrapper:first-child {
            /* Panel1 - World map SVG needs significant space */
            flex: 2.0;
            min-width: 35%;
        }
        .panel-wrapper:nth-child(2) {
            /* Panel2 - Charts */
            flex: 1.2;
            min-width: 25%;
        }
        .panel-wrapper:nth-child(3) {
            /* Panel3 - Semaphore */
            flex: 1.3;
            min-width: 25%;
        }
        .panel-wrapper:last-child {
            /* Panel4 - WorldMap component */
            flex: 1.5;
            min-width: 25%;
            container-type: inline-size;
            overflow: visible; /* Permitir que las cards de latencia sean visibles */
        }
    </style>
    <div class="panoramic-display-container">
        <div class="panel-wrapper">
            <Panel1 />
        </div>
        <div class="panel-wrapper">
            <Panel2/>
        </div>
        <div class="panel-wrapper">
            <Panel3 />
        </div>
        <div class="panel-wrapper">
            <Panel4 />
        </div>
    </div>
</BaseLayout>