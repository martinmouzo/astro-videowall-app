---
// Página dedicada solo al panel de exploración por regiones
import BaseLayout from '../layouts/BaseLayout.astro';
import RegionAnimation from '../components/RegionAnimation.astro';
---

<BaseLayout title="Exploración por Regiones - España">
  <div class="region-explorer-container">
    <RegionAnimation />
  </div>
</BaseLayout>

<style>
  .region-explorer-container {
    width: 100%;
    height: 100vh;
    background: linear-gradient(135deg, #0f0f0f, #1a1a1a);
    color: #ffffff;
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    overflow: hidden;
    position: relative;
  }

  /* Asegurar que el componente de animación use toda la pantalla */
  .region-explorer-container :global(.region-animation-container) {
    height: 100vh !important;
  }

  /* Ajustes específicos para vista completa */
  .region-explorer-container :global(.region-header) {
    padding: 25px 40px;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(15px);
  }

  .region-explorer-container :global(.region-header h2) {
    font-size: 28px;
    background: linear-gradient(135deg, #ffffff, #cccccc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Mejoras visuales para vista completa */
  .region-explorer-container :global(.region-info-overlay) {
    top: 30px;
    left: 30px;
    min-width: 320px;
    padding: 25px;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.6);
  }

  .region-explorer-container :global(.animation-controls) {
    bottom: 30px;
    right: 30px;
    gap: 15px;
  }

  .region-explorer-container :global(.control-btn) {
    width: 60px;
    height: 60px;
    font-size: 24px;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(15px);
    border: 2px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
  }

  .region-explorer-container :global(.control-btn:hover) {
    background: rgba(255, 255, 255, 0.15);
    transform: scale(1.15);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.6);
  }

  /* Efectos adicionales para pins en vista completa */
  .region-explorer-container :global(.region-center-pin) {
    width: 18px;
    height: 18px;
    border: 3px solid rgba(255, 255, 255, 0.9);
    box-shadow: 0 6px 16px rgba(74, 222, 128, 0.5);
  }

  .region-explorer-container :global(.region-center-pin:hover) {
    transform: translate(-50%, -50%) scale(1.3);
    box-shadow: 0 8px 20px rgba(74, 222, 128, 0.7);
  }

  .region-explorer-container :global(.region-center-pin.highlighted) {
    width: 20px;
    height: 20px;
    border: 3px solid #fbbf24;
    box-shadow: 0 8px 24px rgba(251, 191, 36, 0.7);
  }

  /* Responsivo para vista completa */
  @media (max-width: 1200px) {
    .region-explorer-container :global(.region-info-overlay) {
      min-width: 280px;
      padding: 20px;
    }

    .region-explorer-container :global(.region-header h2) {
      font-size: 24px;
    }
  }

  @media (max-width: 768px) {
    .region-explorer-container :global(.region-header) {
      padding: 20px 25px;
    }

    .region-explorer-container :global(.region-header h2) {
      font-size: 20px;
    }

    .region-explorer-container :global(.region-info-overlay) {
      top: 20px;
      left: 20px;
      right: 20px;
      min-width: auto;
      padding: 18px;
    }

    .region-explorer-container :global(.animation-controls) {
      bottom: 20px;
      right: 20px;
      gap: 12px;
    }

    .region-explorer-container :global(.control-btn) {
      width: 50px;
      height: 50px;
      font-size: 20px;
    }
  }

  /* Efectos de entrada para la página */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .region-explorer-container {
    animation: fadeInUp 0.8s ease-out;
  }

  /* Gradiente de fondo animado */
  .region-explorer-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 80%, rgba(74, 222, 128, 0.03) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(59, 130, 246, 0.03) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(251, 191, 36, 0.02) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
  }

  .region-explorer-container > :global(*) {
    position: relative;
    z-index: 1;
  }
</style>
