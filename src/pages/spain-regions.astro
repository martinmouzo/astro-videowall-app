---
// P√°gina con mapa de Espa√±a completo y modal lateral izquierdo para regiones
import BaseLayout from '../layouts/BaseLayout.astro';
import SpainMap from '../components/SpainMap.astro';
import SpainRegionExplorer from '../components/SpainRegionExplorer.astro';
---

<BaseLayout title="Espa√±a - Mapa y Regiones">
  <div class="spain-map-layout">
    <!-- Mapa de Espa√±a como fondo completo -->
    <div class="main-map-container">
      <SpainMap />
    </div>

    <!-- Modal lateral izquierdo para exploraci√≥n de regiones -->
    <div class="region-modal-container">
      <button class="modal-toggle" id="toggle-modal">
        <span class="toggle-icon">üìç</span>
        <span class="toggle-text">Regiones</span>
      </button>

      <div class="region-modal" id="region-modal">
        <div class="modal-header">
          <h3>Explorador de Regiones</h3>
          <button class="close-modal" id="close-modal">‚úï</button>
        </div>
        <div class="modal-content">
          <SpainRegionExplorer />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .spain-map-layout {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #0f0f0f;
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
  }

  /* Mapa de Espa√±a como fondo completo */
  .main-map-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .main-map-container :global(.spain-map-container) {
    height: 100vh !important;
  }

  /* Contenedor del modal lateral */
  .region-modal-container {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    height: 100vh;
  }

  /* Bot√≥n para abrir/cerrar el modal */
  .modal-toggle {
    position: absolute;
    top: 30px;
    left: 30px;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(15px);
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: #ffffff;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2px;
    transition: all 0.3s ease;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
    z-index: 1001;
  }

  .modal-toggle:hover {
    background: rgba(74, 222, 128, 0.2);
    border-color: rgba(74, 222, 128, 0.5);
    transform: scale(1.1);
    box-shadow: 0 8px 25px rgba(74, 222, 128, 0.3);
  }

  .modal-toggle .toggle-icon {
    font-size: 20px;
    line-height: 1;
  }

  .modal-toggle .toggle-text {
    font-size: 9px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1;
  }

  /* Modal lateral */
  .region-modal {
    position: absolute;
    top: 0;
    left: -450px; /* Inicialmente oculto */
    width: 450px;
    height: 100vh;
    background: rgba(15, 15, 15, 0.95);
    backdrop-filter: blur(20px);
    border-right: 2px solid rgba(255, 255, 255, 0.1);
    box-shadow: 4px 0 30px rgba(0, 0, 0, 0.6);
    transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    z-index: 1000;
  }

  .region-modal.open {
    left: 0;
  }

  /* Header del modal */
  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25px 30px;
    background: rgba(0, 0, 0, 0.5);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
  }

  .modal-header h3 {
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    font-weight: 700;
    font-size: 20px;
    color: #ffffff;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 1px;
    background: linear-gradient(135deg, #4ade80, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .close-modal {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    font-size: 18px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .close-modal:hover {
    background: rgba(239, 68, 68, 0.2);
    color: #ef4444;
    transform: scale(1.1);
  }

  /* Contenido del modal */
  .modal-content {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  /* Ajustes espec√≠ficos para el componente SpainRegionExplorer dentro del modal */
  .modal-content :global(.region-animation-container) {
    height: 100% !important;
    background: transparent !important;
  }

  .modal-content :global(.region-map-container) {
    padding-top: 0;
  }

  .modal-content :global(.region-info-overlay) {
    top: 20px;
    left: 20px;
    right: 20px;
    min-width: auto;
    max-width: none;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(15px);
  }

  .modal-content :global(.animation-controls) {
    bottom: 20px;
    right: 20px;
    gap: 10px;
  }

  .modal-content :global(.control-btn) {
    width: 45px;
    height: 45px;
    font-size: 18px;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
  }

  /* Overlay de fondo cuando el modal est√° abierto */
  .region-modal-container::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.3);
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s ease;
    z-index: 999;
  }

  .region-modal-container.modal-open::before {
    opacity: 1;
    visibility: visible;
  }

  /* Indicador de que el modal est√° disponible */
  .modal-toggle::after {
    content: '';
    position: absolute;
    top: -5px;
    right: -5px;
    width: 12px;
    height: 12px;
    background: #4ade80;
    border-radius: 50%;
    animation: pulseIndicator 2s infinite;
  }

  @keyframes pulseIndicator {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.2);
    }
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .region-modal {
      width: 85vw;
      left: -85vw;
    }

    .modal-toggle {
      top: 20px;
      left: 20px;
      width: 50px;
      height: 50px;
    }

    .modal-toggle .toggle-icon {
      font-size: 16px;
    }

    .modal-toggle .toggle-text {
      font-size: 8px;
    }

    .modal-header {
      padding: 20px 25px;
    }

    .modal-header h3 {
      font-size: 18px;
    }

    .modal-content :global(.region-info-overlay) {
      top: 15px;
      left: 15px;
      right: 15px;
      padding: 15px;
    }

    .modal-content :global(.animation-controls) {
      bottom: 15px;
      right: 15px;
    }

    .modal-content :global(.control-btn) {
      width: 40px;
      height: 40px;
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .region-modal {
      width: 95vw;
      left: -95vw;
    }

    .modal-header h3 {
      font-size: 16px;
    }
  }

  /* Animaciones de entrada */
  @keyframes slideInFromLeft {
    from {
      transform: translateX(-100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .region-modal.open .modal-content {
    animation: slideInFromLeft 0.6s ease-out 0.2s both;
  }

  /* Efectos adicionales para mejorar la experiencia */
  .spain-map-layout.modal-active .main-map-container {
    filter: brightness(0.7) contrast(1.1);
    transition: filter 0.4s ease;
  }

  .spain-map-layout:not(.modal-active) .main-map-container {
    filter: brightness(1) contrast(1);
    transition: filter 0.4s ease;
  }
</style>

<script>
  // Script para manejar la apertura/cierre del modal
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('toggle-modal');
    const closeButton = document.getElementById('close-modal');
    const modal = document.getElementById('region-modal');
    const modalContainer = document.querySelector('.region-modal-container');
    const layout = document.querySelector('.spain-map-layout');

    function openModal() {
      modal?.classList.add('open');
      modalContainer?.classList.add('modal-open');
      layout?.classList.add('modal-active');

      // Actualizar texto del bot√≥n
      const toggleText = toggleButton?.querySelector('.toggle-text');
      if (toggleText) toggleText.textContent = 'Cerrar';
    }

    function closeModal() {
      modal?.classList.remove('open');
      modalContainer?.classList.remove('modal-open');
      layout?.classList.remove('modal-active');

      // Restaurar texto del bot√≥n
      const toggleText = toggleButton?.querySelector('.toggle-text');
      if (toggleText) toggleText.textContent = 'Regiones';
    }

    // Event listeners
    toggleButton?.addEventListener('click', () => {
      if (modal?.classList.contains('open')) {
        closeModal();
      } else {
        openModal();
      }
    });

    closeButton?.addEventListener('click', closeModal);

    // Cerrar modal al hacer click en el overlay
    modalContainer?.addEventListener('click', (e) => {
      if (e.target === modalContainer) {
        closeModal();
      }
    });

    // Cerrar modal con tecla Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal?.classList.contains('open')) {
        closeModal();
      }
    });

    // Auto-abrir el modal despu√©s de 3 segundos para mostrar la funcionalidad
    setTimeout(() => {
      if (!modal?.classList.contains('open')) {
        openModal();

        // Auto-cerrar despu√©s de 8 segundos para no ser intrusivo
        setTimeout(() => {
          if (modal?.classList.contains('open')) {
            closeModal();
          }
        }, 8000);
      }
    }, 3000);
  });
</script>
