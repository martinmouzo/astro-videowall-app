---
// Página con vista dividida: Animación de regiones arriba y mapa estático de España abajo
import BaseLayout from '../layouts/BaseLayout.astro';
import SpainMap from '../components/SpainMap.astro';
import RegionAnimation from '../components/RegionAnimation.astro';
---

<BaseLayout title="Panel España - Exploración y Mapa">
  <div class="spain-panel-container">
    <!-- Parte Superior: Animación de Regiones (50%) -->
    <div class="top-panel">
      <div class="animation-container">
        <RegionAnimation />
      </div>
    </div>

    <!-- Parte Inferior: Mapa Estático de España (50%) -->
    <div class="bottom-panel">
      <div class="map-container">
        <SpainMap />
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .spain-panel-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background: linear-gradient(135deg, #0f0f0f, #1a1a1a);
    color: #ffffff;
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    overflow: hidden;
    position: relative;
  }

  /* Panel Superior - Animación de Regiones */
  .top-panel {
    flex: 1; /* 50% de la altura */
    display: flex;
    flex-direction: column;
    position: relative;
    background: linear-gradient(135deg, #1a1a1a, #2a2a2a);
  }

  /* Panel Inferior - Mapa Estático */
  .bottom-panel {
    flex: 1; /* 50% de la altura */
    display: flex;
    flex-direction: column;
    position: relative;
    background: linear-gradient(135deg, #0f0f0f, #1a1a1a);
  }

  /* Contenedores de contenido */
  .animation-container {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .map-container {
    flex: 1;
    position: relative;
    overflow: hidden;
  }



  /* Ajustes específicos para los componentes */

  /* RegionAnimation en el panel superior */
  .animation-container :global(.region-animation-container) {
    height: 100% !important;
    background: transparent !important;
  }

  .animation-container :global(.region-header) {
    display: none; /* Ocultamos el header duplicado */
  }

  .animation-container :global(.region-map-container) {
    padding-top: 0;
  }

  .animation-container :global(.region-info-overlay) {
    top: 20px;
    left: 20px;
    right: 20px;
    min-width: auto;
    max-width: 350px;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6);
  }

  .animation-container :global(.animation-controls) {
    bottom: 20px;
    right: 20px;
    gap: 10px;
  }

  .animation-container :global(.control-btn) {
    width: 45px;
    height: 45px;
    font-size: 18px;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* SpainMap en el panel inferior */
  .map-container :global(.spain-map-container) {
    height: 100% !important;
    background: transparent !important;
  }

  /* Estilos para pins mejorados en vista dividida */
  .map-container :global(.spain-location-pin),
  .map-container :global(.arteixo-central-pin) {
    backdrop-filter: blur(12px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .map-container :global(.arteixo-central-pin .pin-content) {
    background: linear-gradient(135deg, #4ade80, rgba(74, 222, 128, 0.8));
    border: 2px solid rgba(74, 222, 128, 0.4);
    box-shadow: 0 4px 16px rgba(74, 222, 128, 0.4);
  }

  /* Efectos de animación */
  @keyframes progressPulse {
    0%, 100% {
      box-shadow: 0 0 5px rgba(74, 222, 128, 0.3);
    }
    50% {
      box-shadow: 0 0 15px rgba(74, 222, 128, 0.6);
    }
  }

  /* Responsivo */
  @media (max-width: 1200px) {
    .animation-container :global(.region-info-overlay) {
      max-width: 300px;
    }
  }

  @media (max-width: 768px) {
    .spain-panel-container {
      flex-direction: column;
    }

    .animation-container :global(.region-info-overlay) {
      top: 15px;
      left: 15px;
      right: 15px;
      max-width: none;
      padding: 15px;
    }

    .animation-container :global(.animation-controls) {
      bottom: 15px;
      right: 15px;
      gap: 8px;
    }

    .animation-container :global(.control-btn) {
      width: 40px;
      height: 40px;
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .animation-container :global(.control-btn) {
      width: 40px;
      height: 40px;
      font-size: 16px;
    }
  }

  /* Efectos de entrada */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .top-panel,
  .bottom-panel {
    animation: fadeInUp 0.8s ease-out;
  }

  .bottom-panel {
    animation-delay: 0.2s;
  }

  /* Gradientes de fondo sutiles */
  .top-panel::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 70%, rgba(74, 222, 128, 0.03) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
  }

  .bottom-panel::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 70% 30%, rgba(59, 130, 246, 0.03) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
  }

  .animation-container,
  .map-container {
    position: relative;
    z-index: 1;
  }
</style>

<script>
  // Script para configuración básica del panel
  document.addEventListener('DOMContentLoaded', () => {
    console.log('✅ Spain Panel loaded successfully');

    // Funciones globales para debugging
    (window as any).spainPanelUtils = {
      debug: () => {
        console.log('=== DEBUG SPAIN PANEL ===');
        console.log('Top panel: Region Animation');
        console.log('Bottom panel: Static Spain Map');
        console.log('Layout: Clean split view (50/50)');
      }
    };
  });
</script>
