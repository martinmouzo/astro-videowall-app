---
// P√°gina videowall: Mapa est√°tico de Espa√±a con ventana flotante de animaci√≥n de regiones
import BaseLayout from '../layouts/BaseLayout.astro';
import SpainMap from '../components/SpainMap.astro';
import SpainRegionExplorer from '../components/SpainRegionExplorer.astro';
---

<BaseLayout title="Videowall Espa√±a - Exploraci√≥n de Regiones">
  <div class="spain-videowall-container">
    <!-- Mapa principal de Espa√±a (pantalla completa) -->
    <div class="main-map-view">
      <SpainMap />
    </div>

    <!-- Panel de informaci√≥n de regi√≥n externa (top-left) -->
    <div class="external-region-info-panel" id="regionInfoPanel">
      <div class="info-panel-header">
        <img src="/images/Logo_Inditex.webp" alt="Inditex" class="header-logo" />
      </div>
      <div class="info-panel-content">
        <div class="region-name"></div>
        <div class="region-details"></div>
        <div class="centers-count"></div>
        <ul class="centers-list"></ul>
      </div>
    </div>

    <!-- Ventana flotante de animaci√≥n (right side) -->
    <div class="floating-animation-window" id="floatingWindow">
      <div class="window-content">
        <SpainRegionExplorer hideInfoOverlay={true} />
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .spain-videowall-container {
    position: relative;
    width: 100vw;
    height: 100vh;
    background: linear-gradient(135deg, #0f0f0f, #1a1a1a);
    color: #ffffff;
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    overflow: hidden;
  }

  /* Mapa principal (pantalla completa) */
  .main-map-view {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .main-map-view :global(.spain-map-container) {
    height: 100vh !important;
    width: 100vw !important;
    background: transparent !important;
  }

  /* Panel de informaci√≥n de regi√≥n externa (esquina superior izquierda) */
  .external-region-info-panel {
    position: absolute;
    top: 20px;
    left: 20px;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.95), rgba(20, 20, 20, 0.98));
    backdrop-filter: blur(25px);
    border-radius: 16px;
    padding: 0;
    min-width: 320px;
    max-width: 380px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow:
      0 15px 35px rgba(0, 0, 0, 0.6),
      0 5px 15px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
    z-index: 1000;
    opacity: 1;
    overflow: hidden;
  }

  .info-panel-header {
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.25),
      rgba(255, 255, 255, 0.15),
      rgba(255, 255, 255, 0.1)
    );
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    padding: 24px;
    display: flex;
    justify-content: center;
    align-items: center;
    backdrop-filter: blur(30px) saturate(150%);
    position: relative;
    overflow: hidden;
  }

  .info-panel-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.15),
      rgba(255, 255, 255, 0.05),
      transparent,
      rgba(255, 255, 255, 0.08)
    );
    border-radius: 16px 16px 0 0;
    z-index: -1;
  }

  .info-panel-header::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at center,
      rgba(255, 255, 255, 0.2) 0%,
      rgba(255, 255, 255, 0.1) 50%,
      transparent 100%
    );
    border-radius: 16px 16px 0 0;
    z-index: 0;
  }

  .header-logo {
    height: 36px;
    width: auto;
    filter:
      brightness(1.5)
      contrast(1.4)
      saturate(1.1)
      drop-shadow(0 4px 20px rgba(0, 0, 0, 0.8))
      drop-shadow(0 2px 10px rgba(255, 255, 255, 0.5))
      drop-shadow(0 0 15px rgba(255, 255, 255, 0.3))
      drop-shadow(0 0 30px rgba(255, 255, 255, 0.2));
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    opacity: 1;
    position: relative;
    z-index: 10;
    mix-blend-mode: normal;
  }

  .header-logo:hover {
    transform: scale(1.05) translateY(-1px);
    filter:
      brightness(1.6)
      contrast(1.5)
      saturate(1.2)
      drop-shadow(0 6px 25px rgba(0, 0, 0, 0.9))
      drop-shadow(0 3px 15px rgba(255, 255, 255, 0.6))
      drop-shadow(0 0 20px rgba(255, 255, 255, 0.4))
      drop-shadow(0 0 40px rgba(255, 255, 255, 0.3));
  }

  .info-panel-content {
    padding: 20px;
  }

  .external-region-info-panel .region-name {
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    font-weight: 700;
    font-size: 24px;
    color: #ffffff;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 1.2px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .external-region-info-panel .region-name::before {
    content: "‚óè";
    font-size: 16px;
    color: #4ade80;
    filter: drop-shadow(0 0 8px rgba(74, 222, 128, 0.7));
  }

  .external-region-info-panel .region-details {
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    font-weight: 500;
    font-size: 14px;
    color: #e0e0e0;
    margin-bottom: 16px;
    line-height: 1.5;
    font-style: italic;
    padding-left: 30px;
  }

  .external-region-info-panel .centers-count {
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    font-weight: 600;
    font-size: 15px;
    color: #4ade80;
    background: linear-gradient(135deg, rgba(74, 222, 128, 0.2), rgba(74, 222, 128, 0.1));
    padding: 12px 16px;
    border-radius: 12px;
    border: 1px solid rgba(74, 222, 128, 0.5);
    margin-bottom: 16px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 4px 12px rgba(74, 222, 128, 0.25);
  }

  .external-region-info-panel .centers-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 8px;
    max-height: none;
    overflow: visible;
  }

  .external-region-info-panel .centers-list li {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 12px 8px;
    border-radius: 12px;
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.08),
      rgba(255, 255, 255, 0.04)
    );
    border: 1px solid rgba(255, 255, 255, 0.15);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    cursor: pointer;
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
    min-height: 70px;
  }

  .external-region-info-panel .centers-list li::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 0%,
      rgba(74, 222, 128, 0.1) 0%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .external-region-info-panel .centers-list li:hover {
    background: linear-gradient(135deg,
      rgba(74, 222, 128, 0.15),
      rgba(74, 222, 128, 0.08)
    );
    border-color: rgba(74, 222, 128, 0.4);
    transform: translateY(-2px) scale(1.02);
    box-shadow:
      0 8px 25px rgba(74, 222, 128, 0.2),
      0 3px 10px rgba(0, 0, 0, 0.3);
  }

  .external-region-info-panel .centers-list li:hover::before {
    opacity: 1;
  }

  .center-main-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
    flex: 1;
    text-align: center;
  }

  .center-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
  }

  .center-name {
    font-weight: 700;
    font-size: 12px;
    color: #ffffff;
    text-align: center;
    line-height: 1.2;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  .latency-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4px;
    font-size: 10px;
    font-weight: 600;
    margin-top: 4px;
    padding: 2px 6px;
    border-radius: 8px;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(5px);
  }

  .latency-dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  .latency-excellent .latency-dot {
    background: #10b981;
    box-shadow: 0 0 6px rgba(16, 185, 129, 0.8);
  }

  .latency-good .latency-dot {
    background: #4ade80;
    box-shadow: 0 0 6px rgba(74, 222, 128, 0.8);
  }

  .latency-warning .latency-dot {
    background: #fbbf24;
    box-shadow: 0 0 6px rgba(251, 191, 36, 0.8);
  }

  .latency-error .latency-dot {
    background: #ef4444;
    box-shadow: 0 0 6px rgba(239, 68, 68, 0.8);
  }

  .latency-excellent {
    color: #10b981;
    background: rgba(16, 185, 129, 0.15);
  }

  .latency-good {
    color: #4ade80;
    background: rgba(74, 222, 128, 0.15);
  }

  .latency-warning {
    color: #fbbf24;
    background: rgba(251, 191, 36, 0.15);
  }

  .latency-error {
    color: #ef4444;
    background: rgba(239, 68, 68, 0.15);
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Ventana flotante de animaci√≥n (lateral derecha) */
  .floating-animation-window {
    position: absolute;
    top: 30px;
    right: 30px;
    width: 35%;
    height: calc(100vh - 60px);
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.85), rgba(20, 20, 20, 0.9));
    backdrop-filter: blur(20px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow:
      0 20px 50px rgba(0, 0, 0, 0.6),
      0 8px 20px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    z-index: 900;
    opacity: 1;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .window-content {
    flex: 1;
    overflow: hidden;
    border-radius: 20px;
  }

  /* Estilos para el componente SpainRegionExplorer dentro de la ventana flotante */
  .floating-animation-window :global(.region-animation-container) {
    height: 100% !important;
    background: transparent !important;
    border-radius: 20px;
  }

  .floating-animation-window :global(.region-map-container) {
    border-radius: 20px;
    overflow: hidden;
  }

  .floating-animation-window :global(.region-map) {
    border-radius: 20px;
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .floating-animation-window {
      position: fixed;
      top: auto;
      bottom: 20px;
      right: 20px;
      left: 20px;
      width: auto;
      height: 40vh;
      border-radius: 16px;
    }

    .external-region-info-panel {
      top: 20px;
      left: 20px;
      right: 20px;
      width: auto;
      min-width: auto;
      max-width: none;
      border-radius: 16px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    console.log('‚úÖ Spain Videowall Panel loaded successfully');

    const regionInfoPanel = document.getElementById('regionInfoPanel');
    const floatingWindow = document.getElementById('floatingWindow');

    // Funci√≥n para actualizar el panel de informaci√≥n externa
    function updateExternalRegionInfo(regionData: any) {
      if (!regionInfoPanel) return;

      const regionName = regionInfoPanel.querySelector('.region-name') as HTMLElement;
      const regionDetails = regionInfoPanel.querySelector('.region-details') as HTMLElement;
      const centersCount = regionInfoPanel.querySelector('.centers-count') as HTMLElement;
      const centersList = regionInfoPanel.querySelector('.centers-list') as HTMLElement;

      if (regionData && regionData.name) {
        // Actualizar nombre de regi√≥n
        if (regionName) {
          regionName.textContent = regionData.name;
        }

        // Actualizar detalles
        if (regionDetails) {
          regionDetails.textContent = regionData.description || 'Regi√≥n de Espa√±a con sedes.';
        }

        // Actualizar contador de sedes
        const centersNum = regionData.centers ? regionData.centers.length : 0;
        if (centersCount) {
          centersCount.textContent = `${centersNum} sedes`;
        }

        // Actualizar lista de sedes
        if (centersList && regionData.centers) {
          centersList.innerHTML = '';
          regionData.centers.forEach((center: any, index: number) => {
            // Usar la latencia real del centro
            const latency = center.latency;
            const latencyClass = latency === 0 ? 'latency-excellent' :
                                latency <= 10 ? 'latency-excellent' :
                                latency <= 20 ? 'latency-good' :
                                latency <= 35 ? 'latency-warning' : 'latency-error';

            const li = document.createElement('li');
            li.innerHTML = `
              <div class="center-main-info">
                <div class="center-info">
                  <div class="center-name">${center.name}</div>
                </div>
                <div class="latency-indicator ${latencyClass}">
                  <div class="latency-dot"></div>
                  <span>${latency === 0 ? 'HUB' : latency + 'ms'}</span>
                </div>
              </div>
            `;
            li.style.animationDelay = `${index * 0.1}s`;
            centersList.appendChild(li);
          });
        }
      }
    }

    // Escuchar eventos de cambio de regi√≥n desde el componente SpainRegionExplorer
    window.addEventListener('regionChanged', (event: Event) => {
      const customEvent = event as CustomEvent;
      const regionData = customEvent.detail;
      console.log('üìç Region changed:', regionData);
      updateExternalRegionInfo(regionData);
    });

    // Funciones globales para debugging y comunicaci√≥n
    (window as any).spainVideowallUtils = {
      debug: () => {
        console.log('=== DEBUG SPAIN VIDEOWALL ===');
        console.log('Layout: Fullscreen map with floating animation window');
        console.log('Info panel:', regionInfoPanel ? 'Found' : 'Not found');
        console.log('Floating window:', floatingWindow ? 'Found' : 'Not found');
      },

      updateRegionInfo: updateExternalRegionInfo,

      // Funci√≥n para ser llamada desde el componente SpainRegionExplorer
      notifyRegionChange: (regionData: any) => {
        updateExternalRegionInfo(regionData);
        // Disparar evento personalizado
        window.dispatchEvent(new CustomEvent('regionChanged', { detail: regionData }));
      }
    };

    // Estado inicial del panel de informaci√≥n
    updateExternalRegionInfo(null);
  });
</script>
