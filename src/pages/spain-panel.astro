---
// P√°gina videowall: Mapa est√°tico de Espa√±a con ventana flotante de animaci√≥n de regiones
import BaseLayout from '../layouts/BaseLayout.astro';
import SpainMap from '../components/SpainMap.astro';
import SpainRegionExplorer from '../components/SpainRegionExplorer.astro';
---

<BaseLayout title="Videowall Espa√±a - Exploraci√≥n de Regiones">
  <div class="spain-videowall-container">
    <!-- Mapa principal de Espa√±a (pantalla completa) -->
    <div class="main-map-view">
      <SpainMap />
    </div>

    <!-- Panel de informaci√≥n de regi√≥n externa (top-left) -->
    <div class="external-region-info-panel" id="regionInfoPanel">
      <div class="info-panel-header">
        <h3>Informaci√≥n de Regi√≥n</h3>
        <div class="panel-status">
          <div class="status-dot"></div>
          <span>Selecciona una regi√≥n</span>
        </div>
      </div>
      <div class="info-panel-content">
        <div class="region-name"></div>
        <div class="region-details"></div>
        <div class="centers-count"></div>
        <ul class="centers-list"></ul>
      </div>
    </div>

    <!-- Ventana flotante de animaci√≥n (right side) -->
    <div class="floating-animation-window" id="floatingWindow">
      <div class="window-header">
        <h3>Explorador de Regiones</h3>
      </div>
      <div class="window-content">
        <SpainRegionExplorer hideInfoOverlay={true} />
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .spain-videowall-container {
    position: relative;
    width: 100vw;
    height: 100vh;
    background: linear-gradient(135deg, #0f0f0f, #1a1a1a);
    color: #ffffff;
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    overflow: hidden;
  }

  /* Mapa principal (pantalla completa) */
  .main-map-view {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .main-map-view :global(.spain-map-container) {
    height: 100vh !important;
    width: 100vw !important;
    background: transparent !important;
  }

  /* Panel de informaci√≥n de regi√≥n externa (esquina superior izquierda) */
  .external-region-info-panel {
    position: absolute;
    top: 30px;
    left: 30px;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.95), rgba(20, 20, 20, 0.98));
    backdrop-filter: blur(25px);
    border-radius: 20px;
    padding: 0;
    min-width: 420px;
    max-width: 500px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow:
      0 20px 50px rgba(0, 0, 0, 0.7),
      0 8px 20px rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
    z-index: 1000;
    opacity: 1;
    transform: translateY(0) scale(1);
    transition: all 0.5s ease;
    overflow: hidden;
  }

  .info-panel-header {
    background: linear-gradient(135deg, rgba(74, 222, 128, 0.2), rgba(74, 222, 128, 0.1));
    border-bottom: 1px solid rgba(74, 222, 128, 0.3);
    padding: 20px 28px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .info-panel-header h3 {
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    font-weight: 700;
    font-size: 18px;
    color: #4ade80;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .panel-status {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    color: #e0e0e0;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #4ade80;
    box-shadow: 0 0 10px rgba(74, 222, 128, 0.6);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .info-panel-content {
    padding: 28px;
  }

  .external-region-info-panel .region-name {
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    font-weight: 700;
    font-size: 28px;
    color: #ffffff;
    margin-bottom: 12px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .external-region-info-panel .region-name::before {
    content: "üìç";
    font-size: 24px;
    filter: drop-shadow(0 0 10px rgba(74, 222, 128, 0.7));
  }

  .external-region-info-panel .region-details {
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    font-weight: 500;
    font-size: 16px;
    color: #e0e0e0;
    margin-bottom: 22px;
    line-height: 1.6;
    font-style: italic;
    padding-left: 36px;
  }

  .external-region-info-panel .centers-count {
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    font-weight: 600;
    font-size: 17px;
    color: #4ade80;
    background: linear-gradient(135deg, rgba(74, 222, 128, 0.2), rgba(74, 222, 128, 0.1));
    padding: 14px 18px;
    border-radius: 14px;
    border: 1px solid rgba(74, 222, 128, 0.5);
    margin-bottom: 20px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 6px 16px rgba(74, 222, 128, 0.25);
  }

  .external-region-info-panel .centers-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 14px;
    max-height: 300px;
    overflow-y: auto;
  }

  .external-region-info-panel .centers-list::-webkit-scrollbar {
    width: 6px;
  }

  .external-region-info-panel .centers-list::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
  }

  .external-region-info-panel .centers-list::-webkit-scrollbar-thumb {
    background: rgba(74, 222, 128, 0.6);
    border-radius: 3px;
  }

  .external-region-info-panel .centers-list li {
    display: flex;
    align-items: center;
    padding: 14px 18px;
    border-radius: 18px;
    background: linear-gradient(135deg, rgba(50, 50, 50, 0.8), rgba(30, 30, 30, 0.85));
    border: 1px solid rgba(255, 255, 255, 0.1);
    gap: 12px;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .external-region-info-panel .centers-list li:hover {
    background: linear-gradient(135deg, rgba(74, 222, 128, 0.2), rgba(74, 222, 128, 0.1));
    border-color: rgba(74, 222, 128, 0.4);
    transform: translateX(5px);
  }

  .center-icon {
    font-size: 20px;
    filter: drop-shadow(0 0 8px rgba(74, 222, 128, 0.5));
  }

  .center-info {
    flex: 1;
  }

  .center-name {
    font-weight: 600;
    font-size: 15px;
    color: #ffffff;
    margin-bottom: 4px;
  }

  .center-location {
    font-size: 13px;
    color: #a0a0a0;
    font-style: italic;
  }

  /* Ventana flotante de animaci√≥n (lateral derecha) */
  .floating-animation-window {
    position: absolute;
    top: 30px;
    right: 30px;
    width: 35%;
    height: calc(100vh - 60px);
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.85), rgba(20, 20, 20, 0.9));
    backdrop-filter: blur(20px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow:
      0 20px 50px rgba(0, 0, 0, 0.6),
      0 8px 20px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    z-index: 900;
    opacity: 1;
    transform: translateX(0) scale(1);
    transition: all 0.6s ease;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .window-header {
    background: linear-gradient(135deg, rgba(74, 222, 128, 0.2), rgba(74, 222, 128, 0.1));
    border-bottom: 1px solid rgba(74, 222, 128, 0.3);
    padding: 15px 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 20px 20px 0 0;
  }

  .window-header h3 {
    font-family: 'Quicksand Variable', 'Quicksand', sans-serif;
    font-weight: 700;
    font-size: 16px;
    color: #4ade80;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .window-content {
    flex: 1;
    overflow: hidden;
    border-radius: 0 0 20px 20px;
  }

  /* Estilos para el componente SpainRegionExplorer dentro de la ventana flotante */
  .floating-animation-window :global(.region-animation-container) {
    height: 100% !important;
    background: transparent !important;
    border-radius: 0 0 20px 20px;
  }

  .floating-animation-window :global(.region-map-container) {
    border-radius: 0 0 20px 20px;
    overflow: hidden;
  }

  .floating-animation-window :global(.region-map) {
    border-radius: 0 0 20px 20px;
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .floating-animation-window {
      position: fixed;
      top: auto;
      bottom: 20px;
      right: 20px;
      left: 20px;
      width: auto;
      height: 40vh;
      border-radius: 16px;
    }

    .external-region-info-panel {
      top: 20px;
      left: 20px;
      right: 20px;
      width: auto;
      min-width: auto;
      max-width: none;
      border-radius: 16px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    console.log('‚úÖ Spain Videowall Panel loaded successfully');

    const regionInfoPanel = document.getElementById('regionInfoPanel');
    const floatingWindow = document.getElementById('floatingWindow');

    // Funci√≥n para actualizar el panel de informaci√≥n externa
    function updateExternalRegionInfo(regionData: any) {
      if (!regionInfoPanel) return;

      const regionName = regionInfoPanel.querySelector('.region-name') as HTMLElement;
      const regionDetails = regionInfoPanel.querySelector('.region-details') as HTMLElement;
      const centersCount = regionInfoPanel.querySelector('.centers-count') as HTMLElement;
      const centersList = regionInfoPanel.querySelector('.centers-list') as HTMLElement;

      if (regionData && regionData.name) {
        // Actualizar nombre de regi√≥n
        if (regionName) {
          regionName.textContent = regionData.name;
        }

        // Actualizar detalles
        if (regionDetails) {
          regionDetails.textContent = regionData.description || 'Regi√≥n de Espa√±a con centros comerciales.';
        }

        // Actualizar contador de centros
        const centersNum = regionData.centers ? regionData.centers.length : 0;
        if (centersCount) {
          centersCount.textContent = `${centersNum} centros comerciales`;
        }

        // Actualizar lista de centros
        if (centersList && regionData.centers) {
          centersList.innerHTML = '';
          regionData.centers.forEach((center: any, index: number) => {
            const li = document.createElement('li');
            li.innerHTML = `
              <div class="center-icon">üè¢</div>
              <div class="center-info">
                <div class="center-name">${center.name}</div>
                <div class="center-location">${center.location || 'Espa√±a'}</div>
              </div>
            `;
            li.style.animationDelay = `${index * 0.1}s`;
            centersList.appendChild(li);
          });
        }
      }
    }

    // Escuchar eventos de cambio de regi√≥n desde el componente SpainRegionExplorer
    window.addEventListener('regionChanged', (event: Event) => {
      const customEvent = event as CustomEvent;
      const regionData = customEvent.detail;
      console.log('üìç Region changed:', regionData);
      updateExternalRegionInfo(regionData);
    });

    // Funciones globales para debugging y comunicaci√≥n
    (window as any).spainVideowallUtils = {
      debug: () => {
        console.log('=== DEBUG SPAIN VIDEOWALL ===');
        console.log('Layout: Fullscreen map with floating animation window');
        console.log('Info panel:', regionInfoPanel ? 'Found' : 'Not found');
        console.log('Floating window:', floatingWindow ? 'Found' : 'Not found');
      },

      updateRegionInfo: updateExternalRegionInfo,

      // Funci√≥n para ser llamada desde el componente SpainRegionExplorer
      notifyRegionChange: (regionData: any) => {
        updateExternalRegionInfo(regionData);
        // Disparar evento personalizado
        window.dispatchEvent(new CustomEvent('regionChanged', { detail: regionData }));
      }
    };

    // Estado inicial del panel de informaci√≥n
    updateExternalRegionInfo(null);
  });
</script>
