    });
    controlPoints.push({
      x: midX - lateralOffset * 0.8,
      y: midY - baseHeight * 0.85
    });

    // Par√°bolas con diferentes alturas para evitar cruces
    controlPoints.push({
      x: midX + lateralOffset * 0.4,
