        y: midY - baseHeight * 0.7
      });
      controlPoints.push({
        x: midX - lateralOffset * 1.2,
        y: midY - baseHeight * 0.7
      });
    }

    // Par√°bolas inferiores (solo para casos especiales)
    controlPoints.push({
