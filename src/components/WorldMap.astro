  function createSmoothParabolicCurve(from: { x: number; y: number }, to: { x: number; y: number }, apex: { x: number; y: number }): string {
    // Crear una curva c√∫bica de B√©zier que forme una par√°bola perfecta
    // Control points que crean una par√°bola suave desde A hasta B

    const distance = Math.sqrt(Math.pow(to.x - from.x, 2) + Math.pow(to.y - from.y, 2));

