// T√≠tulos permitidos para el filtro
const ALLOWED_TITLES = [
  'UPS', 'DB21', 'E-Commerce', 'BBDD', 'Logistica', 'Seguridad', 'Linux',
  'Exchange', 'AIX', 'Aplicaciones', 'Servicios AD-DNS', 'Medios de Pago',
