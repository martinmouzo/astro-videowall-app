---
// Supports weights 100-700
import '@fontsource-variable/roboto-mono';

interface Props {
  lastUpdate?: string;
  frequency?: number; // en segundos
}

const { lastUpdate, frequency = 300 } = Astro.props;

const formatTime = (timestamp?: string) => {
  if (!timestamp) {
    return new Date().toLocaleTimeString('es-ES', {
      hour: '2-digit',
      minute: '2-digit',
      second: '2-digit'
    });
  }
  return new Date(timestamp).toLocaleTimeString('es-ES', {
    hour: '2-digit',
    minute: '2-digit',
    second: '2-digit'
  });
};

const getNextUpdateTime = () => {
  const now = new Date();
  const nextUpdate = new Date(now.getTime() + frequency * 1000);
  return nextUpdate.toLocaleTimeString('es-ES', {
    hour: '2-digit',
    minute: '2-digit'
  });
};
---

<div class="update-info">
  <div class="last-update">
    <span class="update-label">Última actualización:</span>
    <span class="update-time">{formatTime(lastUpdate)}</span>
  </div>
  <div class="next-update">
    <span class="next-label">Próxima:</span>
    <span class="next-time">{getNextUpdateTime()}</span>
  </div>
  <div class="update-indicator">
    <div class="pulse-dot"></div>
  </div>
</div>

<style>
  .update-info {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
    font-size: 0.65em;
    opacity: 0.9;
    background: rgba(0, 0, 0, 0.5);
    padding: 4px 8px;
    border-radius: 8px;
    backdrop-filter: blur(4px);
    width: fit-content;
    max-width: 100%;
  }

  .last-update, .next-update {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .update-label, .next-label {
    color: #ccc;
    font-size: 0.85em;
  }

  .update-time {
    color: #00ff00;
    font-weight: bold;
    font-family: 'Roboto Mono Variable', monospace;
  }

  .next-time {
    color: #ffaa00;
    font-weight: bold;
    font-family: 'Roboto Mono Variable', monospace;
  }

  .update-indicator {
    position: absolute;
    top: -2px;
    right: -2px;
  }

  .pulse-dot {
    width: 6px;
    height: 6px;
    background: #00ff00;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.2);
    }
  }

  @media (max-width: 1400px) {
    .update-info {
      font-size: 0.55em;
      padding: 3px 6px;
    }

    .pulse-dot {
      width: 4px;
      height: 4px;
    }
  }
</style>
